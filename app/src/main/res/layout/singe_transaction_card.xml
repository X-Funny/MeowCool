<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="?attr/materialCardViewElevatedStyle"
    android:layout_marginBottom="16dp"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:background="?attr/colorTertiaryContainer"

        >

        <TextView
            android:id="@+id/card_summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="摘要"
            android:textAppearance="?attr/textAppearanceDisplaySmall"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
        <TextView
            android:id="@+id/card_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$66.66"
            android:textAppearance="?attr/textAppearanceHeadlineMedium"
            app:layout_constraintTop_toBottomOf="@id/card_summary"
            app:layout_constraintStart_toStartOf="parent"
            />
        <TextView
            android:id="@+id/card_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2025-01-01"
            android:textAppearance="?attr/textAppearanceBodyMedium"
            app:layout_constraintTop_toBottomOf="@id/card_amount"
            app:layout_constraintStart_toStartOf="parent"
            />
        <TextView
            android:id="@+id/card_transaction_number"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="记-1"
            android:textAppearance="?attr/textAppearanceBodyMedium"
            app:layout_constraintTop_toBottomOf="@id/card_amount"
            app:layout_constraintStart_toEndOf="@id/card_date"
            app:layout_constraintEnd_toEndOf="parent"
            android:textAlignment="viewEnd"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>


</com.google.android.material.card.MaterialCardView>