<!-- res/values/styles.xml -->
<resources>

    <style name="CalcButton" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">40sp</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/rounded_button_background</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:textAppearance">?attr/textAppearanceLargePopupMenu</item>
    </style>
</resources>
